{
  "type": "Fixed",
  "packageName": "com.whatsapp",
  "category": "COMMUNICATION",
  "minimumVersionCode": 0,
  "networkPolicy": {
    "mode": "WHITELIST",
    "spec": {
      "type": "HostList",
      "hosts": [
        "v.whatsapp.net",
        "static.whatsapp.net",
        "firebaseinstallations.googleapis.com",
        "time.android.com",
        "dit.whatsapp.net",
        "e1.whatsapp.net",
        "mmg.whatsapp.net",
        "g.whatsapp.net"
      ]
    }
  },
  "detectionRules": [
    {
      "type": "NODE",
      "targets": [
        "com.whatsapp:id/directory_description",
        "com.whatsapp:id/updates_list",
        "com.whatsapp:id/community_recycler_view"
      ],
      "condition": "ONLY_IF",
      "action": "BLOCK_INTERNET",
      "desc": "Disable Internet when entering on WhatsApp Updates List"
    },
    {
      "type": "NODE",
      "targets": [
        "com.whatsapp:id/newsletter_quick_forwarding_pill_container_key"
      ],
      "condition": "ONLY_IF",
      "action": "KILL_APP",
      "desc": "Kill app when entering on WhatsApp Update channel"
    }
  ]
}
